@model HelloCore.Models.Bestelling
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    Layout = "_Layout";
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Klant</h4>
<hr />
<div class="row">
    <div class="col-md-4">
      <form asp-action="Edit">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <input type="hidden" asp-for="BestellingID" />
        <div class="form-group">
          <label asp-for="Artikel" class="control-label"></label>
          <input asp-for="Artikel" class="form-control" />
          <span asp-validation-for="Artikel" class="text-danger"></span>
        </div>
        <div class="form-group">
          <label asp-for="Klant" class="control-label"></label>
          <select asp-for="KlantID" asp-items="ViewBag.Klanten" class="form-control"></select>
          <span asp-validation-for="Klant" class="text-danger"></span>
        </div>
        <div class="form-group">
          <label asp-for="Prijs" class="control-label"></label>
          <input asp-for="Prijs" class="form-control" />
          <span asp-validation-for="Prijs" class="text-danger"></span>
        </div>
        <div class="form-group">
          <input type="submit" value="Save" class="btn btn-primary" />
        </div>
      </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
